{
    "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "lib": ["es2020", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
  }